{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "$/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/config.ts"],
  "exclude": ["node_modules"]
}
